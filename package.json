{
  "name": "paratii-portal",
  "version": "0.0.1",
  "description": "Paratii Portal",
  "main": "index.js",
  "repository": "https://github.com/Paratii-Video/paratii-portal.git",
  "author": "Benjamin Baum <benjaminjbaum@gmail.com>, Jelle Gerbrandy <jelle@gerbrandy.com>, and many others",
  "license": "GPL-3.0",
  "scripts": {
    "dev-client": "npm run clean && npm run prep && webpack --watch --colors --progress",
    "dev-server": "nodemon --watch src/server --watch node_modules src/server/index.js localhost:8080",
    "dev": "concurrently \"npm run dev-client\" \"npm run dev-server\"",
    "build": "npm run clean && npm run prep && NODE_ENV=production webpack --progress --colors",
    "clean": "rm -rf build/",
    "chimp-test": "chimp chimp.config.js --mocha --chai",
    "chimp-test:watch": "npm run chimp-test --watch",
    "dev-parity": "concurrently \"npm run parity\" \"npm run dev-client\" \"npm run dev-server\"",
    "flow": "flow",
    "lint": "npm run lint:scripts && npm run lint:styles",
    "lint:fix": "npm run lint:scripts --fix",
    "lint:scripts": "eslint src test --cache",
    "lint:styles": "stylelint 'src/**/*.js'",
    "parity": "parity --config parity-config.toml",
    "precommit": "lint-staged",
    "prep": "mkdir build/ && cp src/index.html build/ && mkdir build/assets/",
    "quality": "npm run lint:scripts && npm run lint:styles && npm run flow",
    "unit-test": "NODE_ENV=test karma start karma.conf.js",
    "unit-test:dev": "npm run unit-test -- --single-run false"
  },
  "lint-staged": {
    "*.js": [
      "eslint --cache",
      "stylelint",
      "git add"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-object-rest-spread": "^0.0.0",
    "babel-plugin-react-transform": "^3.0.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "chai": "^4.1.2",
    "chimp": "^0.50.2",
    "concurrently": "^3.5.1",
    "css-loader": "^0.28.7",
    "cssnano": "^3.10.0",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.13.1",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-flowtype": "^2.40.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.5.1",
    "eslint-plugin-standard": "^3.0.1",
    "express": "^4.16.2",
    "file-loader": "^1.1.6",
    "flow-bin": "^0.61.0",
    "husky": "^0.14.3",
    "karma": "^2.0.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.9",
    "lint-staged": "^6.0.0",
    "mocha": "^4.0.1",
    "node-sass": "^4.7.2",
    "nodemon": "^1.14.1",
    "postcss-cssnext": "^3.0.2",
    "postcss-loader": "^2.0.9",
    "react-hot-loader": "^3.1.3",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.1",
    "stylelint": "^8.4.0",
    "stylelint-config-standard": "^18.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.2.1",
    "webpack": "^3.10.0",
    "webpack-dev-middleware": "^2.0.2",
    "webpack-hot-middleware": "^2.21.0"
  },
  "dependencies": {
    "bluebird": "^3.5.1",
    "immutable": "^3.8.2",
    "paratii-lib": "github:Paratii-Video/paratii-lib#dev",
    "paratii-mediaplayer": "^0.0.11",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-actions": "^2.2.1",
    "redux-thunk": "^2.2.0",
    "styled-components": "^2.3.3"
  }
}
